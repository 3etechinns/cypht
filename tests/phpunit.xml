<phpunit bootstrap="./bootstrap.php" strict="false" colors="true">
    <testsuite name="cache">
        <file>./cache.php</file>
    </testsuite>
    <testsuite name="crypt">
        <file>./crypt.php</file>
    </testsuite>
    <testsuite name="config">
        <file>./config.php</file>
    </testsuite>
    <testsuite name="db">
        <file>./db.php</file>
    </testsuite>
    <testsuite name="format">
        <file>./format.php</file>
    </testsuite>
    <testsuite name="auth">
        <file>./auth.php</file>
    </testsuite>
    <testsuite name="modules">
        <file>./modules.php</file>
    </testsuite>
    <testsuite name="router">
        <file>./router.php</file>
    </testsuite>
    <testsuite name="output">
        <file>./output.php</file>
    </testsuite>
    <testsuite name="request">
        <file>./request.php</file>
    </testsuite>
    <testsuite name="servers">
        <file>./servers.php</file>
    </testsuite>
    <testsuite name="session">
        <file>./session.php</file>
    </testsuite>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="false" processUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">../lib</directory>
            <exclude>
            <file>../lib/framework.php</file>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./coverage.html" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>
